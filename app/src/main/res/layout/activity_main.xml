<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_centerInParent="true"
    android:id="@+id/btn5"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#343656">

    <ImageView
        android:id="@+id/buttonImage5"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="8dp"
        android:background="#F69e78"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="8dp" >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="8dp"
        android:background="#F69e78"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn5"
        android:layout_marginTop="8dp" />
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#F69e78"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/btn5"
        android:layout_marginTop="8dp" />
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="#F69e78"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn5"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/reset"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@+id/btn8"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/reset"
        android:textColor="#00070B"
        android:textSize="24sp"
        android:textStyle="bold" />




    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_toStartOf="@id/btn5"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343656">
        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/buttonImage4"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_toEndOf="@id/btn5"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343656">
        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/buttonImage6"
            android:importantForAccessibility="no" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_above="@id/btn4"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343656">

        <ImageView
            android:id="@+id/buttonImage2"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/btn6"
        android:layout_toEndOf="@id/btn5"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343656">
        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/buttonImage3"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/btn4"
        android:layout_toStartOf="@id/btn5"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343656">

        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
android:layout_below="@id/btn4"
        android:layout_toStartOf="@id/btn5"
        android:layout_marginBottom="24dp"
        android:id="@+id/btn7"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#343656">
        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/buttonImage7"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn8"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:background="#343656">
        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/buttonImage8"
            />
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="90dp"
       android:layout_height="90dp"
       android:layout_centerInParent="true"
       android:id="@+id/btn9"
       android:layout_marginLeft="20dp"
       android:layout_below="@id/btn6"
       android:layout_toEndOf="@id/btn8"
       android:layout_marginTop="4dp"
       android:layout_marginRight="20dp"
       android:background="#343656"
       >
       <ImageView
           android:layout_width="match_parent"

           android:layout_height="match_parent"
           android:id="@+id/buttonImage9"
           />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"

        >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:background="@color/black"
        android:layout_height="wrap_content"

        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:background="@color/white"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/ScoreX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/score_x_0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ScoreY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/score_y_0"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>


</RelativeLayout>